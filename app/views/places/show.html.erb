<h1><%= @place["name"] %></h1>


<h2>Posts</h2>

<% @posts = Post.where({"place_id" => @place["id"]}) %>

<ul>
  <% for post in @posts %>
    <li>
      <%= post["title"] %>
    </li>
  <% end %>
</ul>


<p>
  <a href="/posts/new?<%= @place["id"] %>">New Post</a>
</p>


<p><a href="/places">Back to All Places</a></p>